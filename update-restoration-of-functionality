set -e
program_name="${0}"

source glibc-libre-files/command-line.zsh

repo_has_been_updated=no
while IFS= read -r script; do
    if [[ "${repo_has_been_updated}" = "no" ]]; then
        eval "./${script}" "${@}"
        repo_has_been_updated=yes
    else
        eval "./${script}"
    fi
done < restoration-of-functionality

# local variables:
# mode: shell-script
# sh-shell: zsh
# coding: utf-8
# indent-tabs-mode: nil
# end:
